{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "types": ["node", "jest", "@testing-library/jest-dom"],

    "paths": {
      "@data/*": ["src/data/*"],
      "@assets/*": ["src/assets/*"],
      "@redux/*": ["src/components/redux/*"],
      "@slices/*": ["src/components/redux/slices/*"],
      "@selectors/*": ["src/components/redux/selectors/*"],
      "@helpers/*": ["src/data/static-data/helpers/*"],
      "@routes/*": ["src/routes/*"],
      "@users/*": ["src/components/users/*"]
    }
  },
  "include": ["client/src", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
